<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smithjterm.storycrafter.PlayActivity">

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="378dp"
        android:layout_marginBottom="122dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/body_in_play"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="72dp" />

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="78dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="287dp">

            <Button
                android:id="@+id/playChoice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="makeChoice"
                android:text="1st choice"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="231dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <Button
                android:id="@+id/playChoice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="makeChoice"
                android:text="2nd choice"
                tools:layout_editor_absoluteX="219dp"
                tools:layout_editor_absoluteY="231dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
